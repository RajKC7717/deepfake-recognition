{
  "manifest_version": 3,
  "name": "Deepfake Detector",
  "version": "0.2.0",
  "description": "Detect AI-generated deepfakes in real-time Google Meet calls. All processing happens on-device â€” your video never leaves your browser.",

  "permissions": [
    "tabCapture",
    "activeTab",
    "storage",
    "offscreen",
    "scripting",
    "notifications"
  ],

  "host_permissions": [
    "https://meet.google.com/*"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Deepfake Detector",
    "default_icon": {
      "16":  "icons/icon16.png",
      "48":  "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches":   ["https://meet.google.com/*"],
      "js":        ["content-script.js"],
      "run_at":    "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "offscreen.html",
        "settings.html",
        "privacy.html",
        "models/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "16":  "icons/icon16.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}